<%= form_for @blog do |f| %>
  <% if @blog.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@blog.errors.count, "error") %> stopped this blog from saving</h2>
      <ul>
        <%= @blog.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <div class="title">
    <%= f.text_field :title, placeholder: "Title", class: 'title_input' %>
  </div>
  
  <div>
    <%= f.select :topic_id, options_from_collection_for_select(Topic.all, :id, :name), class: 'category_input' %>
  </div>

  <div class="description">
    <%= f.text_area :content, placeholder: "Description", class: 'description_input'%>
  </div>

  <div class="term">
      <%# <%= f.check_box :content, class: 'term_check_box' %>
     
      <p class="term_text">I have read and agree to the terms by checking off this box.</p>
      <%= link_to 'Terms', terms_path, class: 'term_link' %>
    </div>

  <div>
    <%= f.submit class: "csubmit" %>
  </div>
<% end %>


