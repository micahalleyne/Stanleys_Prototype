<%= form_for @blog do |f| %>
  <% if @blog.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@blog.errors.count, "error") %> stopped this blog from saving</h2>
      <ul>
        <%= @blog.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>

  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
